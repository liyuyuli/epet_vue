//      隐藏图标

  .show_detail
    display flex
    color #999
    box-sizing border-box
    height 60px
    border-bottom 1px solid  #999
    width 100%
    overflow hidden

    .nav_item
      width 100%
      flex 1
      text-align center
      margin-top 10px
      .num
        font-style normal
        position: relative
        top -47px
        right -14px
        display inline-block
        height 20px
        width 20px
        line-height 20px
        background red
        text-align center
        border-radius 20px
        color white

      &p
       font-size 12px


      .iconfont
        font-size 26px


    &.fade-enter,&.fade-leave-to
      height 0
    &.fade-enter-active,&.fade-leave-active
      transition height .5s linear

































